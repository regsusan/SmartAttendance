@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center">
        <h1 class="display-4">Oops! Something went wrong.</h1>
        <p class="lead">An unexpected error occurred while processing your request.</p>
    </div>
@if (Model.ShowRequestId)
{
    <p>
         <div class="alert alert-light border text-center">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </div>
    </p>
}

 <div class="card mt-4">
        <div class="card-body">
            <h3 class="card-title">Development Mode</h3>
            <p>
                Switching to the <strong>Development</strong> environment provides more detailed error information.
            </p>
            <p class="text-warning">
                <strong>⚠ Warning:</strong> The Development environment should <strong>never</strong> be enabled in production, as it may expose sensitive data.
            </p>
            <p>
                To enable Development mode locally, set the <code>ASPNETCORE_ENVIRONMENT</code> variable to <strong>Development</strong> and restart the application.
            </p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a href="/" class="btn btn-primary">Return to Home</a>
    </div>
</div>